{
  "name": "@arpinum/promising",
  "version": "2.2.2",
  "description": "A simple module that provides basic operations on promises",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": ["build"],
  "scripts": {
    "tslint": "tslint --fix 'lib/**/*.ts'",
    "jest": "jest",
    "testw": "jest --watch",
    "prettier": "prettier --write '**/*.{js,json,md,ts}'",
    "compile": "tsc --noEmit",
    "test": "run-s -c compile jest tslint",
    "prebuild": "rm -rf ./build",
    "build": "tsc",
    "preversion": "run-s test build",
    "postversion": "git push && git push --tags && npm publish"
  },
  "author": "Arpinum",
  "license": "MIT",
  "repository": "arpinum-oss/js-promising.git",
  "keywords": [
    "promise",
    "async",
    "map",
    "queue",
    "auto-curried",
    "functional"
  ],
  "devDependencies": {
    "@types/jest": "22.1.2",
    "jest": "22.2.2",
    "npm-run-all": "4.1.2",
    "prettier": "1.10.2",
    "sinon": "4.3.0",
    "tcomb": "3.2.24",
    "ts-jest": "22.0.4",
    "ts-node": "4.1.0",
    "tslint": "5.9.1",
    "tslint-config-prettier": "1.7.0",
    "typescript": "2.7.1"
  },
  "jest": {
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/lib/.*\\.spec\\.ts$",
    "moduleFileExtensions": ["js", "json", "ts"]
  }
}
