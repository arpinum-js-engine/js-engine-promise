{
  "name": "@arpinum/promising",
  "version": "2.1.0",
  "description": "A simple module that provides basic operations on promises",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": ["build"],
  "scripts": {
    "tslint": "tslint --fix lib/**/*.ts",
    "jest": "jest",
    "testw": "jest --watch",
    "prettier": "prettier --write \"**/*.ts\"",
    "compile": "tsc --noEmit",
    "test": "run-s -c compile jest tslint",
    "prebuild": "rm -rf ./build",
    "build": "tsc",
    "preversion": "run-s test build",
    "postversion": "git push && git push --tags && npm publish"
  },
  "author": "Arpinum",
  "license": "MIT",
  "repository": "arpinum-oss/js-promising.git",
  "keywords": [
    "promise",
    "async",
    "map",
    "queue",
    "auto-curried",
    "functional"
  ],
  "devDependencies": {
    "@types/jest": "21.1.8",
    "jest": "21.2.1",
    "npm-run-all": "4.1.2",
    "prettier": "1.9.2",
    "sinon": "4.1.2",
    "tcomb": "3.2.24",
    "ts-jest": "21.2.4",
    "ts-node": "4.0.2",
    "tslint": "5.8.0",
    "tslint-config-prettier": "1.6.0",
    "typescript": "2.6.2"
  },
  "jest": {
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "testRegex": "/lib/.*\\.spec\\.ts$",
    "moduleFileExtensions": ["js", "json", "ts"]
  }
}
