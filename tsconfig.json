{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "alwaysStrict": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["jest"]
  },
  "include": ["./lib/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.spec.js"]
}
